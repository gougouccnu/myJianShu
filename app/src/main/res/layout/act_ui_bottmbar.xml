<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="发现"
        android:gravity="center"
        android:drawableTop="@drawable/selector_icon_faxian"
        android:id="@+id/btn_FaXian" />

    <Button
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="关注"
        android:gravity="center"
        android:drawableTop="@drawable/selector_icon_guanzhu"
        android:id="@+id/btn_GuanZhu" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_Write" />

    <Button
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="消息"
        android:gravity="center"
        android:drawableTop="@drawable/selector_icon_xiaoxi"
        android:id="@+id/btn_XiaoXi" />

    <Button
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="我的"
        android:gravity="center"
        android:drawableTop="@drawable/selector_icon_wode"
        android:id="@+id/btn_WoDe" />
</LinearLayout>

